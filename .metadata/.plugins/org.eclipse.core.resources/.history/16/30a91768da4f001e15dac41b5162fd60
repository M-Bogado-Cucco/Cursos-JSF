<!-- nessa aula implementa: 
queryDelay -> aumenta ou diminui o tempo de busca dos nomes , 
minQueryLength -> somente executa a busca com uma qtd mínima de caracteres
forceSelection -> tem que selecionar/clicar  algum nome para imprimir  -->

<h:body>

	<h:form id="form">
		<p:panel header="AutoComplete Aumentando tempo da Consulta" toggleable="true">

			<h:panelGrid columns="2" cellpadding="3">
				<h:outputLabel value="Clientes:" />
				<p:autoComplete id="acClientes" value="#{autoCompleteBean.cliente}"
					completeMethod="#{autoCompleteBean.complete}" queryDelay="3000">
				</p:autoComplete>
				<p:commandButton value="Imprimir" update="displayCliente" />

				<h:panelGrid id="displayCliente" columns="2">
					<h:outputText value="Cliente(s): " />
					<h:outputText value="#{autoCompleteBean.cliente}" />
				</h:panelGrid>

			</h:panelGrid>

		</p:panel>
		
		<p:panel header="AutoComplete Tamanho Mínimo" toggleable="true">

			<h:panelGrid columns="2" cellpadding="3">
				<h:outputLabel value="Clientes:" />
				<p:autoComplete id="acClientesMinLength" value="#{autoCompleteBean.cliente}"
					completeMethod="#{autoCompleteBean.complete}" minQueryLength="3" queryDelay="1000">
				</p:autoComplete>
				<p:commandButton value="Imprimir" update="displayClienteMinLength" />

				<h:panelGrid id="displayClienteMinLength" columns="2">
					<h:outputText value="Cliente(s): " />
					<h:outputText value="#{autoCompleteBean.cliente}" />
				</h:panelGrid>

			</h:panelGrid>

		</p:panel>
		
		<p:panel header="AutoComplete Forçando Seleção" toggleable="true">

			<h:panelGrid columns="2" cellpadding="3">
				<h:outputLabel value="Clientes:" />
				<p:autoComplete id="acClientesForce" value="#{autoCompleteBean.cliente}"
					completeMethod="#{autoCompleteBean.complete}" forceSelection="true">
				</p:autoComplete>
				<p:commandButton value="Imprimir" update="displayClienteForce" />

				<h:panelGrid id="displayClienteForce" columns="2">
					<h:outputText value="Cliente(s): " />
					<h:outputText value="#{autoCompleteBean.cliente}" />
				</h:panelGrid>

			</h:panelGrid>

		</p:panel>
		
		<p:panel header="AutoComplete com DropDownList" toggleable="true">

			<h:panelGrid columns="2" cellpadding="3">
				<h:outputLabel value="Clientes:" />
				<p:autoComplete id="acClientesDropDown" value="#{autoCompleteBean.cliente}"
					completeMethod="#{autoCompleteBean.complete}" forceSelection="true" dropdown="true">
				</p:autoComplete>
				<p:commandButton value="Imprimir" update="displayClienteDropDown" />

				<h:panelGrid id="displayClienteDropDown" columns="2">
					<h:outputText value="Cliente(s): " />
					<h:outputText value="#{autoCompleteBean.cliente}" />
				</h:panelGrid>

			</h:panelGrid>

		</p:panel>
		
	</h:form>

