			<p:outputLabel value="Nome" />
			<p:inputText id="nome" value="#{pessoaBean.pessoa.nome}" required="true">
				<f:validateLength minimum="3" maximum="255"></f:validateLength>
			</p:inputText>
			<p:message for="nome"></p:message>
			
			<p:outputLabel value="Email" />
			<p:inputTextarea id="email" value="#{pessoaBean.pessoa.email}"
				required="true" >
				<f:validateLength minimum="3" maximum="255"></f:validateLength>
			</p:inputTextarea>
			<p:message for="email"></p:message>
			
			
		
		</p:panelGrid>
		
		<p:commandButton value="Enviar" action="#{pessoaBean.adicionar}" />
		
	</h:form>
	
	<h2>Lista de Pessoas</h2>
	
	<p:dataTable value="#{pessoaBean.pessoas}" var="p" border="1">
		<p:column>#{p.id}</p:column>
		<p:column>#{p.nome}</p:column>
		<p:column>#{p.email}</p:column>
		<p:column>
			<p:button value="Editar" outcome="" />
		</p:column>
