	<h3>Adicionar lembrete</h3>
	<h:form>
		<h:panelGrid columns="3">
			<h:outputLabel value="Título:" />
			<h:inputText id="titulo" value="#{lembreteBean.lembrete.titulo}" required="true">
				<f:validateLength minimum="3" maximum="255"></f:validateLength>
			</h:inputText>
			<h:message for="titulo"></h:message>
			
			<h:outputLabel value="Descrição:" />
			<h:inputTextarea id="descricao" value="#{lembreteBean.lembrete.descricao}"
				required="true" >
				<f:validateLength minimum="3" maximum="255"></f:validateLength>
			</h:inputTextarea>
			<h:message for="descricao"></h:message>
			
			<h:outputLabel value="Início:" />
			<h:inputText id="data-inicio" value="#{lembreteBean.lembrete.dataInicio}" required="true">
				<f:convertDateTime pattern="dd/MM/yyyy" timeZone="#{initParam.timezone}" />
			</h:inputText>
			<h:message for="data-inicio" />
		
		</h:panelGrid>
		
		<h:commandButton value="Enviar" action="#{lembreteBean.adicionar}" />
		
