	<h3>Adicionar pessoa</h3>
	<h:form>
		<h:panelGrid columns="3">
			<h:outputLabel value="Nome" />
			<h:inputText id="nome" value="#{pessoaBean.pessoa.nome}" required="true">
				<f:validateLength minimum="3" maximum="255"></f:validateLength>
			</h:inputText>
			<h:message for="nome"></h:message>
			
			<h:outputLabel value="Email" />
			<h:inputTextarea id="email" value="#{pessoaBean.pessoa.email}"
				required="true" >
				<f:validateLength minimum="3" maximum="255"></f:validateLength>
			</h:inputTextarea>
			<h:message for="email"></h:message>
			
			
		
		</h:panelGrid>
		
		<h:commandButton value="Enviar" action="#{pessoaBean.adicionar}" />
		
